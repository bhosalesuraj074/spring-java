<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "*-//Hibernate/Hibernate Mapping OTD 5.3//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.onetomany.Employee" table="Employees">
        <id name="id" column="Employee_id" >
            <generator class="increment"/>
        </id>
        <property name="empName" column="Employee_Name" />
        <many-to-one name="department" column="Department_Id" class="com.onetomany.Department" cascade="all"/>
    </class>
</hibernate-mapping>