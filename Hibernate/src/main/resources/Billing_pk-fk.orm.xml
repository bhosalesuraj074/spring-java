<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "*-//Hibernate/Hibernate Mapping OTD 5.3//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.billing.BillingDetails">
        <id name="id" column="Billing_id">
         <generator class="increment" />
        </id>
        <property name="owner" column="Owner_Name" />
        <property name="mobileNumber" column="Mobile_Number" />
        <property name="date" column="Date"/>
        <joined-subclass name="com.billing.CreditCard" table="Credit_card">
            <key column="Creadit_card_id"/>
            <property name="type" column="Billing-type"/>
            <property name="expMonth" column="Expiry_month"/>
            <property name="expYear" column="Expiry_year"/>
        </joined-subclass>
        <joined-subclass name="com.billing.BankDetails" table="Bank_Details">
            <key column="Bank_Card_id" />
            <property name="bankName" column="Bank_Name" />
            <property name="accountNumber" column="Account_Number" />
        </joined-subclass>

    </class>
</hibernate-mapping>